loseRecipeDetails() {\n      this.selectedRecipe = null;\n    }\n  }\n};","map":{"version":3,"names":["data","recipes","id","name","description","image","videoUrl","ingredients","selectedRecipe","methods","selectRecipe","recipe","$nextTick","section","$refs","recipeDetails","window","scrollTo","top","offsetTop","behavior","closeRecipeDetails"],"sources":["C:\\Users\\lozan\\OneDrive\\Documentos\\GitHub\\Recetas-De-Comida-Front\\src\\components\\BebidasPage.vue"],"sourcesContent":["<template>\r\n  <div class=\"bebidas-page\" style=\"margin-bottom: 21px;\">\r\n    <!-- Video de fondo -->\r\n    <div class=\"background-video\">\r\n      <video autoplay loop muted>\r\n        <source src=\"https://videos.pexels.com/video-files/854128/854128-hd_1920_1080_25fps.mp4\" type=\"video/mp4\" />\r\n        Tu navegador no soporta el video.\r\n      </video>\r\n    </div>\r\n\r\n    <!-- Título de la sección -->\r\n    <h1 class=\"title\">Bebidas</h1>\r\n\r\n    <!-- Contenedor de las recetas -->\r\n    <div class=\"recipes-container\">\r\n      <div\r\n        class=\"recipe-card\"\r\n        v-for=\"recipe in recipes\"\r\n        :key=\"recipe.id\"\r\n        @click=\"selectRecipe(recipe)\"\r\n      >\r\n        <img\r\n          :src=\"recipe.image\"\r\n          :alt=\"recipe.name\"\r\n          class=\"recipe-image\"\r\n        />\r\n        <div class=\"recipe-info\">\r\n          <h2>{{ recipe.name }}</h2>\r\n          <p>{{ recipe.description }}</p>\r\n          <button @click=\"selectRecipe(recipe)\">Ver Receta</button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Detalles de la receta seleccionada -->\r\n    <div v-if=\"selectedRecipe\" class=\"recipe-details\" ref=\"recipeDetails\">\r\n      <h2>{{ selectedRecipe.name }}</h2>\r\n      <div class=\"ingredients-list\">\r\n        <h3>Ingredientes:</h3>\r\n        <ul>\r\n          <li v-for=\"(ingredient, index) in selectedRecipe.ingredients\" :key=\"index\">\r\n            {{ ingredient }}\r\n          </li>\r\n        </ul>\r\n      </div>\r\n      <div class=\"recipe-description\">\r\n        <h3>Descripción:</h3>\r\n        <p>{{ selectedRecipe.description }}</p>\r\n      </div>\r\n      <iframe\r\n        :src=\"selectedRecipe.videoUrl\"\r\n        frameborder=\"0\"\r\n        allowfullscreen\r\n        class=\"recipe-video\"\r\n      ></iframe>\r\n      <button @click=\"closeRecipeDetails\">Cerrar</button>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      recipes: [\r\n        {\r\n          id: 1,\r\n          name: \"Paloma\",\r\n          description: \"Una bebida refrescante para el verano.\",\r\n          image: \"https://coctelia.com/wp-content/uploads/2018/08/paloma.jpg\",\r\n          videoUrl: \"https://www.youtube.com/embed/dRHvBt26qTs\",\r\n          ingredients: [\"Jugo de limón\", \"Miel\", \"Jugo de toronja\", \"Hielo\", \"Soda\", \"Tajín\"]\r\n        },\r\n        {\r\n          id: 2,\r\n          name: \"El Cantarito\",\r\n          description: \"Una de las bebidas más populares de México.\",\r\n          image: \"https://th.bing.com/th/id/OIP.pDAoa-nsBUJ6KJAihu7W1AHaE8?rs=1&pid=ImgDetMain\",\r\n          videoUrl: \"https://www.youtube.com/embed/MQTTjNaI9DI\",\r\n          ingredients: [\"Jugo de limón\", \"Sal\", \"Chile en polvo\", \"Tequila\", \"Hielo\", \"Jugo de naranja\", \"Jugo de toronja\"]\r\n        },\r\n        {\r\n          id: 3,\r\n          name: \"Piña Colada\",\r\n          description: \"Uno de los cócteles más populares de la historia.\",\r\n          image: \"https://chefeel.com/chefgeneralfiles/2021/11/milky-cocktail-in-glass-with-pinapple-slice-and-cherry-scaled.jpg\",\r\n          videoUrl: \"https://www.youtube.com/embed/3d3uQOaBbhQ\",\r\n          ingredients: [\"Ron blanco\", \"Leche de coco\", \"Piña\"]\r\n        },\r\n        {\r\n          id: 4,\r\n          name: \"Rebujito\",\r\n          description: \"Una bebida refrescante, ideal para el aperitivo.\",\r\n          image: \"https://th.bing.com/th/id/OIP.H7nM8c9ifZNJLafOCupQNQHaE9?rs=1&pid=ImgDetMain\",\r\n          videoUrl: \"https://www.youtube.com/embed/JBzKSWIBndM\",\r\n          ingredients: [\"Vino Manzanilla\", \"Soda\", \"Hierbabuena\", \"Hielo\"]\r\n        }\r\n      ],\r\n      selectedRecipe: null,\r\n    };\r\n  },\r\n  methods: {\r\n    selectRecipe(recipe) {\r\n      this.selectedRecipe = recipe;\r\n      this.$nextTick(() => {\r\n        const section = this.$refs.recipeDetails;\r\n        window.scrollTo({\r\n          top: section.offsetTop,\r\n          behavior: 'smooth'\r\n        });\r\n      });\r\n    },\r\n    closeRecipeDetails() {\r\n      this.selectedRecipe = null;\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* Video de fondo */\r\n.background-video {\r\n  position: fixed; /* Hace que el video esté fijado en el fondo */\r\n  top: 0;\r\n  left: 0;\r\n  width: 100%; /* Ocupa el ancho completo */\r\n  height: 100%; /* Ocupa la altura completa */\r\n  z-index: -1; /* Coloca el video detrás del contenido */\r\n  overflow: hidden;\r\n}\r\n\r\nvideo {\r\n  width: 100%;\r\n  height: 100%;\r\n  object-fit: cover; /* Asegura que el video cubra el área */\r\n}\r\n\r\n/* Fondo de la página */\r\n.bebidas-page {\r\n  position: relative;\r\n  z-index: 1;\r\n  color: white;\r\n  padding: 20px;\r\n}\r\n\r\n/* Título de la página */\r\n.title {\r\n  text-align: center;\r\n  font-size: 48px; /* Tamaño más grande */\r\n  margin-bottom: 80px;\r\n  color: white;\r\n  margin-top: 60px;\r\n  text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7); /* Contorno oscuro para que no se pierda */\r\n  animation: glow 1.5s ease-in-out infinite; /* Efecto de brillo suave */\r\n}\r\n\r\n/* Contenedor de las recetas */\r\n.recipes-container {\r\n  display: flex;\r\n  flex-wrap: wrap;\r\n  justify-content: space-around;\r\n  gap: 50px;\r\n  padding-bottom: 35px;\r\n}\r\n\r\n/* Tarjeta de receta */\r\n.recipe-card {\r\n  background-color: white;\r\n  border-radius: 10px;\r\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);\r\n  width: 250px;\r\n  text-align: center;\r\n  transition: transform 0.2s ease-in-out;\r\n}\r\n\r\n.recipe-card:hover {\r\n  transform: scale(1.05);\r\n}\r\n\r\n/* Imagen de la receta */\r\n.recipe-image {\r\n  width: 100%;\r\n  height: 180px;\r\n  object-fit: cover;\r\n  border-top-left-radius: 10px;\r\n  border-top-right-radius: 10px;\r\n  cursor: pointer;\r\n}\r\n\r\n/* Información de la receta */\r\n.recipe-info {\r\n  padding: 15px;\r\n}\r\n\r\n.recipe-info h2 {\r\n  font-size: 20px;\r\n  color: #a80000;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.recipe-info p {\r\n  font-size: 14px;\r\n  color: #555;\r\n  margin-bottom: 15px;\r\n}\r\n\r\n.recipe-info button {\r\n  padding: 8px 16px;\r\n  background-color: #a80000;\r\n  color: white;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n  transition: background-color 0.3s ease;\r\n}\r\n\r\n.recipe-info button:hover {\r\n  background-color: #f44336;\r\n}\r\n\r\n/* Estilos para los detalles de la receta */\r\n.recipe-details {\r\n  margin-top: 50px;\r\n  padding: 20px;\r\n  background-color: #fff;\r\n  border-radius: 10px;\r\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);\r\n  text-align: center;\r\n  max-width: 600px;\r\n  margin: 20px auto;\r\n}\r\n\r\n.recipe-details h2 {\r\n  color: #a80000;\r\n}\r\n\r\n.recipe-video {\r\n  width: 100%;\r\n  height: 250px;\r\n  margin-top: 20px;\r\n  border-radius: 10px;\r\n}\r\n\r\n.ingredients-list,\r\n.recipe-description {\r\n  margin-top: 20px;\r\n  color: black;\r\n}\r\n\r\n.ingredients-list h3,\r\n.recipe-description h3 {\r\n  color: #a80000;\r\n}\r\n\r\n.ingredients-list ul {\r\n  list-style-type: none;\r\n  padding: 0;\r\n}\r\n\r\n.ingredients-list li {\r\n  font-size: 16px;\r\n  color: #555;\r\n  margin-bottom: 5px;\r\n}\r\n\r\n.recipe-details button {\r\n  margin-top: 20px;\r\n  padding: 10px 20px;\r\n  background-color: #a80000;\r\n  color: white;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n.recipe-details button:hover {\r\n  background-color: #f44336;\r\n}\r\n</style>\r\n"],"mappings":"AA6DA,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,OAAO,EAAE,CACP;QACEC,EAAE,EAAE,CAAC;QACLC,IAAI,EAAE,QAAQ;QACdC,WAAW,EAAE,wCAAwC;QACrDC,KAAK,EAAE,4DAA4D;QACnEC,QAAQ,EAAE,2CAA2C;QACrDC,WAAW,EAAE,CAAC,eAAe,EAAE,MAAM,EAAE,iBAAiB,EAAE,OAAO,EAAE,MAAM,EAAE,OAAO;MACpF,CAAC,EACD;QACEL,EAAE,EAAE,CAAC;QACLC,IAAI,EAAE,cAAc;QACpBC,WAAW,EAAE,6CAA6C;QAC1DC,KAAK,EAAE,8EAA8E;QACrFC,QAAQ,EAAE,2CAA2C;QACrDC,WAAW,EAAE,CAAC,eAAe,EAAE,KAAK,EAAE,gBAAgB,EAAE,SAAS,EAAE,OAAO,EAAE,iBAAiB,EAAE,iBAAiB;MAClH,CAAC,EACD;QACEL,EAAE,EAAE,CAAC;QACLC,IAAI,EAAE,aAAa;QACnBC,WAAW,EAAE,mDAAmD;QAChEC,KAAK,EAAE,gHAAgH;QACvHC,QAAQ,EAAE,2CAA2C;QACrDC,WAAW,EAAE,CAAC,YAAY,EAAE,eAAe,EAAE,MAAM;MACrD,CAAC,EACD;QACEL,EAAE,EAAE,CAAC;QACLC,IAAI,EAAE,UAAU;QAChBC,WAAW,EAAE,kDAAkD;QAC/DC,KAAK,EAAE,8EAA8E;QACrFC,QAAQ,EAAE,2CAA2C;QACrDC,WAAW,EAAE,CAAC,iBAAiB,EAAE,MAAM,EAAE,aAAa,EAAE,OAAO;MACjE,EACD;MACDC,cAAc,EAAE;IAClB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,YAAYA,CAACC,MAAM,EAAE;MACnB,IAAI,CAACH,cAAa,GAAIG,MAAM;MAC5B,IAAI,CAACC,SAAS,CAAC,MAAM;QACnB,MAAMC,OAAM,GAAI,IAAI,CAACC,KAAK,CAACC,aAAa;QACxCC,MAAM,CAACC,QAAQ,CAAC;UACdC,GAAG,EAAEL,OAAO,CAACM,SAAS;UACtBC,QAAQ,EAAE;QACZ,CAAC,CAAC;MACJ,CAAC,CAAC;IACJ,CAAC;IACDC,kBAAkBA,CAAA,EAAG;MACnB,IAAI,CAACb,cAAa,GAAI,IAAI;IAC5B;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}