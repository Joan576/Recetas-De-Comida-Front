  window.scrollTo({\n          top: section.offsetTop,\n          behavior: 'smooth'\n        });\n      });\n    },\n    closeRecipeDetails() {\n      this.selectedRecipe = null;\n    }\n  }\n};","map":{"version":3,"names":["data","recipes","id","name","description","image","videoUrl","ingredients","selectedRecipe","methods","selectRecipe","recipe","$nextTick","section","$refs","recipeDetails","window","scrollTo","top","offsetTop","behavior","closeRecipeDetails"],"sources":["C:\\Users\\lozan\\OneDrive\\Documentos\\GitHub\\Recetas-De-Comida-Front\\src\\components\\BebidasPage.vue"],"sourcesContent":["<template>\r\n    <div class=\"bebidas-page\" style=\"margin-bottom: 21px;\">\r\n    <!-- Video de fondo -->\r\n    <div class=\"background-video\">\r\n      <video autoplay loop muted>\r\n        <source src=\"../../videos/chocolate.mp4\" type=\"video/mp4\" />\r\n        Tu navegador no soporta el video.\r\n      </video>\r\n    </div>\r\n  \r\n      <!-- Título de la sección -->\r\n    <h1 class=\"title\">Bebidas</h1>\r\n\r\n<!-- Contenedor de las recetas -->\r\n<div class=\"recipes-container\">\r\n  <div\r\n    class=\"recipe-card\"\r\n    v-for=\"recipe in recipes\"\r\n    :key=\"recipe.id\"\r\n    @click=\"selectRecipe(recipe)\"\r\n  >\r\n    <img\r\n      :src=\"recipe.image\"\r\n      :alt=\"recipe.name\"\r\n      class=\"recipe-image\"\r\n    />\r\n    <div class=\"recipe-info\">\r\n      <h2>{{ recipe.name }}</h2>\r\n      <p>{{ recipe.description }}</p>\r\n      <button @click=\"selectRecipe(recipe)\">Ver Receta</button>\r\n    </div>\r\n  </div>\r\n</div>\r\n\r\n<!-- Detalles de la receta seleccionada -->\r\n<div v-if=\"selectedRecipe\" class=\"recipe-details\" ref=\"recipeDetails\">\r\n  <h2>{{ selectedRecipe.name }}</h2>\r\n  <div class=\"ingredients-list\">\r\n    <h3>Ingredientes:</h3>\r\n    <ul>\r\n      <li v-for=\"(ingredient, index) in selectedRecipe.ingredients\" :key=\"index\">\r\n        {{ ingredient }}\r\n      </li>\r\n    </ul>\r\n  </div>\r\n  <div class=\"recipe-description\">\r\n    <h3>Descripción:</h3>\r\n    <p>{{ selectedRecipe.description }}</p>\r\n  </div>\r\n  <iframe\r\n    :src=\"selectedRecipe.videoUrl\"\r\n    frameborder=\"0\"\r\n    allowfullscreen\r\n    class=\"recipe-video\"\r\n  ></iframe>\r\n  <button @click=\"closeRecipeDetails\">Cerrar</button>\r\n</div>\r\n\r\n</div>\r\n</template>\r\n\r\n\r\n<script>\r\nexport default {\r\ndata() {\r\nreturn {\r\n  recipes: [\r\n    {\r\n      id: 1,\r\n      name: \"Negroni\",\r\n      description: \"uno de los más legendarios cócteles de aperitivo.\",\r\n      image:\r\n        \"https://claudia.abril.com.br/wp-content/uploads/2020/01/negroni-drinques-tradicionais-bhofack2-1.jpg\",\r\n      videoUrl: \"https://www.youtube.com/watch?v=xQsPiAf-t1Q\",\r\n      ingredients: [\"Campari\", \"vermú rojo\", \"ginebra\", \"naranja\"]\r\n    },\r\n    {\r\n      id: 2,\r\n      name: \"Tom Collins\",\r\n      description:\r\n        \"uno de los más populares cócteles de ginebra y uno de los más sencillos de elaborar.\",\r\n      image:\r\n        \"https://i0.wp.com/clickamericana.com/wp-content/uploads/Tom-Collins-cocktail-recipes.jpg?fit=1600,1067&ssl=1\",\r\n      videoUrl: \"https://www.youtube.com/watch?v=NmWVSm26u-c\",\r\n      ingredients: [\"ginebra\", \"zumo de limón\", \"soda\", \"azúcar\", \"Hielo\"]\r\n    },\r\n    {\r\n      id: 3,\r\n      name: \"Piña colada\",\r\n      description:\r\n        \"uno de los cócteles más popular de la historia.\",\r\n      image:\r\n        \"https://i0.wp.com/clickamericana.com/wp-content/uploads/Tom-Collins-cocktail-recipes.jpg?fit=1600,1067&ssl=1\",\r\n      videoUrl: \"https://www.youtube.com/watch?v=GUnW4_7xfEQ\",\r\n      ingredients: [\r\n        \"ron blanco\",\r\n        \"leche de coco\",\r\n        \"zumo de piña\",\r\n        \"zumo de limon\"\r\n      ]\r\n    },\r\n    {\r\n      id: 4,\r\n      name: \"Rebujito\",\r\n      description:\r\n        \"una bebida refrescante, ideal para el aperitivo.\",\r\n      image:\r\n        \"https://th.bing.com/th/id/OIP.H7nM8c9ifZNJLafOCupQNQHaE9?rs=1&pid=ImgDetMain\",\r\n      videoUrl: \"https://www.youtube.com/watch?v=fvQQfWbTvy8\",\r\n      ingredients: [\r\n        \"Vino Manzanilla\",\r\n        \"Fino\",\r\n        \"Montilla Moriles o similar\",\r\n        \"Soda\",\r\n        \"Hierbabuena\",\r\n        \"Hielo\"\r\n      ]\r\n    }\r\n  ],\r\n  selectedRecipe: null,\r\n};\r\n},\r\nmethods: {\r\nselectRecipe(recipe) {\r\n  this.selectedRecipe = recipe;\r\n  this.$nextTick(() => {\r\n    const section = this.$refs.recipeDetails;\r\n    window.scrollTo({\r\n      top: section.offsetTop,\r\n      behavior: 'smooth'\r\n    });\r\n  });\r\n},\r\ncloseRecipeDetails() {\r\n  this.selectedRecipe = null;\r\n}\r\n}\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n\r\n/* Video de fondo */\r\n.background-video {\r\nposition: fixed; /* Hace que el video esté fijado en el fondo */\r\ntop: 0;\r\nleft: 0;\r\nwidth: 100%; /* Ocupa el ancho completo */\r\nheight: 100%; /* Ocupa la altura completa */\r\nz-index: -1; /* Coloca el video detrás del contenido */\r\noverflow: hidden;\r\n}\r\n\r\nvideo {\r\nwidth: 100%;\r\nheight: 100%;\r\nobject-fit: cover; /* Asegura que el video cubra el área */\r\n}\r\n\r\n/* Fondo de la página */\r\n.entradas-page {\r\nposition: relative;\r\nz-index: 1;\r\ncolor: white;\r\npadding: 20px;\r\n}\r\n\r\n/* Título de la página */\r\n/* Título de la página */\r\n.title {\r\ntext-align: center;\r\nfont-size: 48px; /* Tamaño más grande */\r\nmargin-bottom: 80px;\r\ncolor: white;\r\nmargin-top: 60px;\r\ntext-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7); /* Contorno oscuro para que no se pierda */\r\nanimation: glow 1.5s ease-in-out infinite; /* Efecto de brillo suave */\r\n}\r\n\r\n\r\n\r\n/* Contenedor de las recetas */\r\n.recipes-container {\r\ndisplay: flex;\r\nflex-wrap: wrap;\r\njustify-content: space-around;\r\ngap: 50px;\r\npadding-bottom: 35px;\r\n}\r\n\r\n/* Tarjeta de receta */\r\n.recipe-card {\r\nba